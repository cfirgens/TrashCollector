@model IEnumerable<TrashCollector.Models.Address>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>My Addresses</h2>
<br />
<br />
<div class="jumbotron">
    <p>Big ole google maps of all address here</p>
</div>
<div class="col-4 ">
    <button type="button" class="btn btn-outline-primary">
        @Html.ActionLink("Create New", "Create")
    </button>
</div>
<br />
<br />


    @foreach (var item in Model)
    {
        <div class="col-4 d-inline-block" style="width: 33%;">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header"> google map goes here!</div>
            </div>
            <div class="card-body">

                @Html.DisplayFor(modelItem => item.StreetAddress)

                @Html.DisplayFor(modelItem => item.City),

                @Html.DisplayFor(modelItem => item.State)

                @Html.DisplayFor(modelItem => item.ZipCode)

                @Html.DisplayFor(modelItem => item.pickUpDay)
                
                @if(item.SingleDate != null)
                {
                    <p>Single Pick Up Date:
                    @Html.DisplayFor(modelItem=> item.SingleDate)
                        </p>
                }
                @if(item.vacationStart != null)
                {
                    <p>Pick up suspension dates:
                       Start: @Html.DisplayFor(modelItem=>item.vacationStart)
                       End: @Html.DisplayFor(modelItem=>item.vacationEnd)</p>
                }



            </div>
            @Html.ActionLink("Edit", "Edit", new { id = item.AddressId }) |
            @Html.ActionLink("Details", "Details", new { id = item.AddressId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AddressId })
        </div>
    }
